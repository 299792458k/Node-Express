<div class="container">
    <div class="row mt-4">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <a href="/courses/{{this.slug}}">
                <img src="{{this.img}}" class="card-img-top" alt="...">
            </a>
            <div class="card-body">
                <a href="/courses/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                </a>
                <p class="card-text">{{this.dex}}</p>
                <a href="#" class="btn btn-primary">Đăng ký khoá học</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>